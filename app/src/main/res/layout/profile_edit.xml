<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/main_color">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/main_color"
                app:layout_constraintHeight_percent="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <View
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/view_border">
                </View>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_round_shape"
                app:layout_constraintTop_toBottomOf="@+id/con_top">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/cons_heder">


                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_back_final"
                        android:contentDescription="TODO">
                    </ImageView>

                    <TextView
                        android:id="@+id/tv_cashcollected"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Edit Profile"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_marginStart="10dp"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/iv_back"
                        android:textColor="@color/black">
                    </TextView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/seoge"
                    android:textColor="#6C757D"
                    android:textSize="14sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cons_heder">
                </TextView>

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Ray Sumner"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="#0F1D41"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name">

                </EditText>

                <TextView
                    android:id="@+id/tv_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone number"
                    android:fontFamily="@font/seoge"
                    android:textColor="#6C757D"
                    android:textSize="14sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ed_name">
                </TextView>

                <EditText
                    android:id="@+id/ed_phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="8265426588"
                    android:textSize="16sp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="#0F1D41"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_phonenumber">

                </EditText>

                <TextView
                    android:id="@+id/tv_emailid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email id"
                    android:fontFamily="@font/seoge"
                    android:textColor="#6C757D"
                    android:textSize="14sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ed_phonenumber">
                </TextView>

                <EditText
                    android:id="@+id/ed_mailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="ray@gmail.com"
                    android:textSize="16sp"
                    android:fontFamily="@font/seoge"
                    android:textColor="#6C757D"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_emailid">

                </EditText>

        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_savechange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Save Changes"
        android:textSize="16sp"
        android:padding="15dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/login_border"
        android:textColor="@color/white"
        android:fontFamily="@font/seoge">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>