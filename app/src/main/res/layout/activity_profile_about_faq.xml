<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/main_color">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/main_color"
                app:layout_constraintHeight_percent="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <View
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/view_border">
                </View>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_round_shape"
                app:layout_constraintTop_toBottomOf="@+id/con_top">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/cons_heder">


                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_back_final">
                    </ImageView>

                    <TextView
                        android:id="@+id/tv_cashcollected"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="About"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/iv_back"
                        android:textColor="@color/black">
                    </TextView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/con_faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/cons_heder">

                    <TextView
                        android:id="@+id/tv_editprofile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAQ"
                        android:textSize="14sp"
                        android:textColor="#0F1D41"
                        android:fontFamily="@font/seoge"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </TextView>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_green_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </ImageView>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/con_faq"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/iv_line"
                    android:background="#D2D2D2">
                </View>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/con_termsandcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_line">

                    <TextView
                        android:id="@+id/tv_termsandcond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms and Condition"
                        android:textSize="14sp"
                        android:textColor="#0F1D41"
                        android:fontFamily="@font/seoge"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </TextView>

                    <ImageView
                        android:id="@+id/iv_termsandcond"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_green_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </ImageView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/con_termsandcon"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/iv_line_two"
                    android:background="#D2D2D2">
                </View>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/con_privacypolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/con_termsandcon">

                    <TextView
                        android:id="@+id/tv_privacypolicy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"
                        android:textSize="14sp"
                        android:textColor="#0F1D41"
                        android:fontFamily="@font/seoge"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </TextView>

                    <ImageView
                        android:id="@+id/iv_privacypolicy"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_green_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </ImageView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/con_privacypolicy"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/iv_line_three"
                    android:background="#D2D2D2">
                </View>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/con_rateus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_line_three">

                    <TextView
                        android:id="@+id/tv_rateus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate us"
                        android:textSize="14sp"
                        android:textColor="#0F1D41"
                        android:fontFamily="@font/seoge"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </TextView>

                    <ImageView
                        android:id="@+id/iv_rateus"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_green_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    </ImageView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/con_rateus"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/iv_line_four"
                    android:background="#D2D2D2">
                </View>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

