<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0F1D41"
            android:layout_marginBottom="30dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#0F1D41"
            app:layout_constraintHeight_percent="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <View
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/view_border">
            </View>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_round_shape"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/con_top">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/cons_heder">


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_back_final">
                </ImageView>

                <TextView
                    android:id="@+id/tv_cashcollected"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Product Delivered"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/iv_back"
                    android:textColor="@color/black">
                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

     <ImageView
         android:id="@+id/iv_cashearned"
         android:layout_width="match_parent"
         android:layout_height="250dp"
         android:src="@drawable/ic_earned"
         app:layout_constraintTop_toBottomOf="@+id/cons_heder">
      </ImageView>

            <TextView
                android:id="@+id/tv_earned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_cashearned"
                android:text="Earned 2"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/inter_bold"
                android:textColor="#0F1D41"></TextView>

            <TextView
                android:id="@+id/tv_ordernum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_earned"
                android:text="#05845465546"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:fontFamily="@font/seoge"
                android:textColor="#0F1D41">
            </TextView>

            <View
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ordernum"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/iv_line"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#D3D3D3">
            </View>


            <TextView
                android:id="@+id/tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#0F1D41"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_line">
            </TextView>

            <ImageView
                android:id="@+id/iv_cat"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_veg"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_order">
            </ImageView>

            <TextView
                android:id="@+id/tv_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soup x 1"
                android:textSize="14sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/seoge"
                android:textColor="#0F1D41"
                app:layout_constraintTop_toBottomOf="@+id/tv_order"
                app:layout_constraintStart_toEndOf="@+id/iv_cat">
            </TextView>

            <TextView
                android:id="@+id/tv_totalamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 "
                android:fontFamily="@font/seoge"
                android:textColor="#0F1D41"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order">
            </TextView>


            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Total"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:fontFamily="@font/seoge"
                android:textColor="#969EB4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_food">
            </TextView>

            <TextView
                android:id="@+id/tv_deliverycharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Charge"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:fontFamily="@font/seoge"
                android:textColor="#969EB4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_total">
            </TextView>


            <TextView
                android:id="@+id/tv_grandtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grand Total"
                android:textSize="16sp"
                android:textColor="#0F1D41"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_deliverycharge">
            </TextView>


            <TextView
                android:id="@+id/tv_total_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/seoge"
                android:textColor="#969EB4"
                android:text="6"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_food">
            </TextView>

            <TextView
                android:id="@+id/tv_deliverycharge_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/seoge"
                android:textColor="#969EB4"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_total_val">
            </TextView>


            <TextView
                android:id="@+id/tv_grandtotal_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#0F1D41"
                android:fontFamily="@font/segoe_ui_bold"
                android:textSize="16sp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_deliverycharge_val">
            </TextView>


            <View
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/iv_line_three"
                android:background="#D3D3D3"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_grandtotal_val">
            </View>


            <TextView
                android:id="@+id/tv_order_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Number"
                android:textColor="#969EB4"
                android:textSize="14sp"
                android:fontFamily="@font/seoge"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_line_three">
            </TextView>




            <TextView
                android:id="@+id/tv_order_numText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05845465546"
                android:textSize="12sp"
                android:fontFamily="@font/seoge"
                android:layout_marginLeft="20dp"
                android:textColor="#0F1D41"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_details">
            </TextView>

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/cons_payment"
                  app:layout_constraintTop_toBottomOf="@id/tv_order_numText">

            <TextView
                android:id="@+id/tv_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup"
                android:textColor="#969EB4"
                android:textSize="14sp"
                android:fontFamily="@font/seoge"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>

                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:layout_width="0dp"
                      app:layout_constraintWidth_percent="0.27"
                      android:layout_height="wrap_content"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toEndOf="parent">
                      <TextView
                          android:id="@+id/tv_dropoff"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Drop Off"
                          android:textColor="#969EB4"
                          android:textSize="14sp"
                          android:fontFamily="@font/seoge"
                          android:layout_marginRight="20dp"
                          android:layout_marginTop="20dp"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent">
                      </TextView>

                      <TextView
                          android:id="@+id/tv_address"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="4699 Avenue"
                          android:textColor="#0F1D41"
                          android:textSize="16sp"
                          android:fontFamily="@font/seoge"
                          android:layout_marginRight="20dp"
                          android:layout_marginTop="5dp"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toBottomOf="@id/tv_dropoff">
                      </TextView>
                      <TextView
                          android:id="@+id/tv_dropoffname"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Manama"
                          android:textColor="#0F1D41"
                          android:textSize="12sp"
                          android:fontFamily="@font/seoge"
                          android:layout_marginRight="20dp"
                          android:layout_marginTop="5dp"
                          app:layout_constraintTop_toBottomOf="@+id/tv_address"
                          app:layout_constraintStart_toStartOf="parent">
                      </TextView>


                  </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="#0F1D41"
                android:textSize="16sp"
                android:fontFamily="@font/seoge"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_pickup">
            </TextView>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_arrow_white_final"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageView>




            <TextView
                android:id="@+id/tv_pickupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manama"
                android:textColor="#0F1D41"
                android:textSize="12sp"
                android:fontFamily="@font/seoge"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name">
            </TextView>




        </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textSize="12sp"
                android:textColor="#969EB4"
                android:fontFamily="@font/seoge"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cons_payment"
                app:layout_constraintStart_toStartOf="parent">
            </TextView>

            <TextView
                android:id="@+id/tv_cod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COD"
                android:textSize="14sp"
                android:textColor="#0F1D41"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_payment">
            </TextView>

            <TextView
                android:id="@+id/tv_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textSize="16sp"
                android:padding="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:background="@drawable/login_border"
                android:fontFamily="@font/seoge"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cod"
                android:textColor="@color/white">
            </TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>